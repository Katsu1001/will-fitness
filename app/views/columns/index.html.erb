<%= render "shared/header" %>
<header class="items-sell-header">
    <%= link_to image_tag('show.edit.logo.png' , size: '185x60'), "/" %>

</header>
<div class='main'>

  <div class='item-contents'>
    <h2 class='title'>最近の情報</h2>
    <div class="subtitle" >
      <p>トレーニング・食事・サプリメント等、必要な情報は全てここから</p>
    </div>
    <ul class='item-lists'>

      <%  if @columns.present? %>
        <% @columns.each do |column| %>
          <li class='list'>
            <%= link_to column_path (column.id) do %>
            <div class='item-img-content' >
              <%= image_tag column.image, class: "item-img" %>
            </div>
            <div class='item-info'>
              <h3 class='item-name'>
                <%= column.name %>
              </h3>
            </div>
            <div class='item-price'>
              <span><%= column.category.name %></span>
              <div class='star-btn'>
                <%= image_tag "star.png", class:"star-icon" %>
                <span class='star-count'></span>
              </div>
            </div>
          </div>
        <% end %>
          </li>
          <% end %>
      <% else %>
        <li class='list'>
          <%= link_to columns_index_path do %>
          <%= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "item-img" %>
          <div class='item-info'>
            <h3 class='item-name'>
              体づくりの情報を投稿してね
            </h3>
          </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<%= link_to(new_column_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'push.logo.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
<%= render "shared/footer" %>
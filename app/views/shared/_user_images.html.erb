<% @images.each do |image| %>
  <div class="mx-3">
    <div class="head_box">
      <div class="photo_date">
        <%= image.created_at.strftime("%Y/%m/%d") %>
      </div>
      <div class="comment">
        <%= image.comment %>
      </div>
      <% if current_user.id == @user.id %>
        <div class="edit-btn ml-3">
          コメント編集ボタン
          <i class="fas fa-pencil-alt p-1 show_modal edit-comment" id="<%= image.id %>" value="#html_to_modal_box"></i>
        </div>
        <div class="ml-auto mb-2">
          記事削除ボタン
          <i class="fas fa-times-circle fa-2x cursor_pointer show_modal delete_btn" id="<%= image.id %>" value="#delete_image"></i>
        </div>
      <% end %>
    </div>
    <% image.user_image.each do |ele| %>
      <%= image_tag "#{ele}", class: 'photo-box' %>
    <% end %>
  </div>
  <hr/>
<% end %>
<%= link_to_next_page @images, 'さらに表示', remote: true, id: 'images_next', class: 'btn btn-primary mb-3 block fontsize_12' %>
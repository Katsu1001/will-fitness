<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to root_path do %>
      <%= link_to image_tag("will.icon.logo.png", class:"will-icon"), "/" %>
    <% end %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <ul class="footer-social">
    <li> <a href="http://www.facebook.com/share.php?u=https%3A%2F%2Fwww.free-css.com%2Ffree-css-templates%2Fpage262%2Fdsports&t=DSports"><i class="fa fa-facebook-f"></i></a></li>
    <li> <a href="http://twitter.com/home?status=DSports%20-%20https%3A%2F%2Fwww.free-css.com%2Ffree-css-templates%2Fpage262%2Fdsports"><i class="fa fa-twitter"></i></a></li>
    <li> <a href="https://instagram.com/studiodartisan/"><i class="fa fa-instagram"></i></a></li>
    <li><a href="https://www.youtube.com/"><i class="fab fa-youtube"></i></a></li>
  </ul>
  
  <div class='nav'>
    <ul class='lists-left'>
      <% if user_signed_in? %> 
        <li><%= link_to 'ユーザー検索', root_path, class: "category-list" %></li>
        <li><%= link_to '写真', root_path, class: "category-list" %></li>
        <li><%= link_to '目標設定', todolist_toppages_path, class: "category-list" %></li>
        <li><%= link_to 'カレンダー', user_path(current_user.id), class: "category-list" %></li>
        <li><%= link_to '分析', root_path, class: "category-list" %></li>
        <li><%= link_to 'コラム', columns_index_path, class: "category-list" %></li>
      <% else %>
        <li><%= link_to 'コラム', columns_index_path, class: "category-list" %></li>
      <% end %>
    </ul>
    
    <ul class='lists-right'>
      <% if user_signed_in? %> 
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %> </li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
    </ul>
      <% end %>
  </div>
</header>